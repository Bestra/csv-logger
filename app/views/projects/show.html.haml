%p#notice= notice
%h1= @project.name
%h3= @project.description

%table.table.table-bordered
  %tr
    %th index #
    %th Name
    %th

  - @sensors.each do |sensor|
    %tr
      %td= sensor.project_index
      %td= sensor.name
      %td= link_to 'Edit', edit_project_sensor_path(@project, sensor)
      %td= link_to 'Delete', project_sensor_path(@project, sensor), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Sensor', new_project_sensor_path(@project.id)

= link_to 'Edit', edit_project_path(@project)
